@model IEnumerable<CmsCoreV2.Models.Setting>

    @{
        ViewData["Title"] = "Setting";
    }

    <br />
    <div class="row">
        <div class="col-md-12">
            <form action="/Setting" method="post">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <h1 class="page-title">E-Posta Ayarları</h1>
                    </div>
                    <div class="portlet-body form">
                        <form role="form">
                            <div class="form-body">
                                <div class="form-group">
                                   
                                        <span>Kullanıcı Adı</span><br />
                                        <input type="text" name="SmtpUserName"  class="form-control">
                                   
                                </div>


                                <div class="form-group">
                                  
                                        <span>Şifre</span><br />
                                        <input type="text" name="SmtpPassword" class="form-control">
                                   
                                </div>


                                <div class="form-group">
                                   
                                        <span>Host</span><br />
                                        <input type="text" name="SmtpHost" class="form-control">
                                    
                                </div>


                                <div class="form-group">
                                   
                                        <span>Port</span><br />
                                        <input type="text" name="SmtpPort" class="form-control">
                                   
                                </div>


                                <div class="form-group">
                                 
                                        <span>SSL</span><br />
                                        <input type="checkbox" name="SmtpUseSSL" class="form-control">

                                    </div>
                                <br />
                                <div class="form-group">
                                    <div class="form-group">
                                        <button type="submit" success="true" class="btn blue ">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </div>




    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
