@model IEnumerable<CmsCoreV2.Models.Setting>

@{
    ViewData["Title"] = "Setting";
}

<br/>
<div class="row">
    <div class="col-md-12">
        <form action="/Setting" method="post">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <h1 class="page-title">Genel Ayarlar</h1>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="theme-option">
                                    <span>Header Script:</span><br />
                                    <textarea class="form-control" name="HeaderScript"></textarea>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="theme-option">
                                    <span>Google Analytics:</span><br />
                                    <textarea class="form-control" name="GoogleAnalytics"></textarea>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="theme-option">
                                    <span>Footer Script:</span><br />
                                    <textarea class="form-control" name="FooterScript"></textarea>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="theme-option">
                                    <span>Map Lat:</span><br />
                                    <input type="text" class="form-control" name="MapLat">
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="theme-option">
                                    <span>Map Lon:</span><br />
                                    <input type="text" class="form-control" name="MapLon">
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="form-group">
                                    <button type="submit" success="true" class="btn blue ">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
