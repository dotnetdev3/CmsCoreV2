@model CmsCoreV2.Models.MenuItem

@{
    ViewData["Title"] = "Menü Ögeleri Düzenle";
}
<script src="~/js/generate-slug.js"> </script>


<h2>Menü Ögelerini Düzenle</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="Name" class="form-control" tabindex="1" autofocus="autofocus" onblur="if ($('#Url').val() == '') {$('#Url').val(slug($('#Name').val().toLowerCase(),'-'));}" />
                <span asp-validation-for="Name" class="text-danger"></span>
</div>
        </div>
        <div class="form-group">
            <label asp-for="Url" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="Url" class="form-control" tabindex="2" onblur="if ($('#Url').val() == '') {$('#Url').val(slug($('#Name').val().toLowerCase(),'-'));}" />
                <span class="text-danger" asp-validation-for="Url"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Target" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Target" class="form-control" />
                <span asp-validation-for="Target" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsPublished" />
                    <label asp-for="IsPublished"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ParentMenuItemId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ParentMenuItemId" class="form-control" asp-items="ViewBag.ParentMenuItemId">
                    <option value=""> Seçiniz...</option>
                </select>
                <span asp-validation-for="ParentMenuItemId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MenuId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MenuId" class="form-control" asp-items="ViewBag.MenuId">
                    <option value="">Seçiniz...!</option>
                </select>
                <span asp-validation-for="MenuId" class="text-danger"></span>
            </div>
        </div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreateDate" class="form-control" readonly/>
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedBy" class="form-control"readonly />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdateDate" class="form-control" readonly />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdatedBy" class="form-control" readonly />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
