@model IEnumerable<CmsCoreV2.Models.MenuItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Menu Item</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Form Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Target)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsPublished)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AppTenantId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Menu)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ParentMenuItem)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Target)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentMenuItem.Id)
            </td>
            <td class="text-nowrap">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>