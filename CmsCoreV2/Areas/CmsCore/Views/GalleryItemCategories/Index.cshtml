@model IEnumerable<CmsCoreV2.Models.GalleryItemCategory>

@{
    ViewData["Title"] = "Galeri Öğesi Kategorileri";
}

<link href="/metronic/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />

<h2>Galeri Öğe Kategorileri</h2>

<p>
    <a asp-action="Create" class="btn sbold green">Yeni Galeri Öğesi Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
               Üst Kategori
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>


            <th data-orderable="false" class="all">
                Eylemler
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.UpdatedBy)
                </td>

                <td class="text-nowrap">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Düzenle</a> 
                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id">Detaylar</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
