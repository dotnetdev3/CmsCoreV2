@model IEnumerable<CmsCoreV2.Models.Form>

@{
    ViewData["Title"] = "Formlar";
}

<h2>Form</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Form Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.FormName)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.EmailTo)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Language.NativeName)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.EmailCc)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Template)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ClosingDescription)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.GoogleAnalyticsCode)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.IsPublished)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.EmailBcc)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FormName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.NativeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Template)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoogleAnalyticsCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-nowrap">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> 
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                <a class="btn btn-success" asp-action="Preview" asp-route-id="@item.Id">Önizleme</a>
            </td>
        </tr>
}
    </tbody>
</table>
