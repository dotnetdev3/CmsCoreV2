@model IEnumerable<CmsCoreV2.Models.GalleryItem>

@{
    ViewData["Title"] = "All Gallery Items";
}

<link href="/metronic/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />

<h2>All Gallery Items</h2>

<p>
    <a asp-action="Create" class="btn sbold green">Create Gallery Item</a>
</p>
<table class="table table-striped table-bordered table-hover table-checkable" id="tblRecords">
    <thead>
        <tr>
            <th class="all">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meta1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>


            <th data-orderable="false" class="all dt-right ">
                Eylemler
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Video)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meta1)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </td>

                <td class="dt-right text-nowrap">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
