@model IEnumerable<CmsCoreV2.Models.Redirect>

@{
    ViewData["Title"] = "Redirect";
}

<h2>Redirect</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Oluştur</a>
</p>
    <table class="table table-striped table-bordered table-hover" id="tblRecords">
                          <thead>
                              <tr>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.Name)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.OldUrl)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.NewUrl)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.IsActive)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.CreateDate)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.CreatedBy)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.UpdateDate)
                                  </th>
                                  <th class="text-nowrap">
                                      @Html.DisplayNameFor(model => model.UpdatedBy)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.AppTenantId)
                                  </th>
                                  <th data-orderable="false" class="all">Eylemler</th>
                              </tr>
                          </thead>
                          <tbody>
                              @foreach (var item in Model) {
                                  <tr>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Name)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.OldUrl)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.NewUrl)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.IsActive)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.CreateDate)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.CreatedBy)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.UpdateDate)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.UpdatedBy)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.AppTenantId)
                                      </td>
                                      <td class="text-nowrap">
                                          <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                                          <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                                          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                      </td>
                                  </tr>
}
                          </tbody>
                      </table>
