@model IEnumerable<CmsCoreV2.Models.Media>

@{
    ViewData["Title"] = "Tüm Medyalar";
}

<link href="/metronic/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />

<h2>Tüm Medyalar</h2>

<p>
    <a asp-action="Create" class="btn sbold green" >Media Ekle</a>
</p>
<table class="table table-striped table-bordered table-hover"   id="tblRecords">
    <thead>
        <tr>
            <th class="all">
                @Html.DisplayName("Ortam")
            </th>
            <th class="all">
                @Html.DisplayNameFor(model => model.Title)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>          
            <th data-orderable="false" class="all dt-right ">Eylemler
            </th>
       
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.FileType == "Image")
                {
                    <img src="@ViewBag.AssetsUrl@item.FileUrl@item.FileName" class="img-thumbnail" />
                }
                else if (item.FileType == "Document")
                {
                    <i style="margin-top:10px;" class="inline-block big fa fa-file-pdf-o fa-2x" aria-hidden="true"></i>
                }
                else
                {
                    <video width="70">
                        <source src="@ViewBag.AssetsUrl@item.FileUrl@item.FileName" type="video/mp4">
                    </video>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size) KB
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>        
            <td class="dt-right text-nowrap">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id">Detaylar</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>


