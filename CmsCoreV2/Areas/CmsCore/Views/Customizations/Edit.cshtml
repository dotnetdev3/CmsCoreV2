@model CmsCoreV2.Models.ViewModels.CustomizationViewModel

@{
    ViewData["Title"] = "Düzenle";
}

<h2>Düzenle</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Customization</h4>
        <hr />
        <p>@ViewData["var"]</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ThemeName" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="ThemeName" class="form-control" readonly />
                <span asp-validation-for="ThemeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PageTemplates" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <textarea asp-for="PageTemplates" class="form-control"></textarea>
                <span asp-validation-for="PageTemplates" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ComponentTemplates" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <textarea asp-for="ComponentTemplates" class="form-control"></textarea>
                <span asp-validation-for="ComponentTemplates" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Logo" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.Logo)</label>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="Logo" class="form-control" />
                    <span class="input-group-btn">
                        <a class="btn btn-info" id="uploadModal" type="button" onclick="browseMedia('Logo')">...</a>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="col-md-2 control-label">@Html.DisplayNameFor(model => model.ImageUrl)</label>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="ImageUrl" class="form-control" />
                    <span class="input-group-btn">
                        <a class="btn btn-info" id="uploadModal" type="button" onclick="browseMedia('ImageUrl')">...</a>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label asp-for="MetaTitle" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="MetaTitle" class="form-control" />
                <span asp-validation-for="MetaTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MetaDescription" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="MetaDescription" class="form-control" />
                <span asp-validation-for="MetaDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MetaKeywords" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="MetaKeywords" class="form-control" />
                <span asp-validation-for="MetaKeywords" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ManyLocations" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <textarea asp-for="ManyLocations" class="form-control" ></textarea>
                <span asp-validation-for="ManyLocations" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="CreateDate" class="form-control" readonly />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="UpdateDate" class="form-control" readonly />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "Logo" } })
@Html.Partial("_BrowseMedia", new ViewDataDictionary(this.ViewData) { { "element", "ImageUrl" } })
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
