@model CmsCoreV2.Models.ViewModels.CustomCssViewModel

@{
    ViewData["Title"] = "CustomCss";
}
<h2>CustomCss</h2>

<link href="/metronic/global/plugins/codemirror/lib/codemirror.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/codemirror/theme/neat.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/codemirror/theme/ambiance.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/codemirror/theme/material.css" rel="stylesheet" type="text/css" />
<link href="/metronic/global/plugins/codemirror/theme/neo.css" rel="stylesheet" type="text/css" />


<form asp-action="CustomCss">
    <div class="form-horizontal">
        <h4>Customization</h4>
        <hr />
        <p>@ViewData["var"]</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ThemeName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="ThemeName" class="form-control" readonly />
                <span asp-validation-for="ThemeName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="CustomCSS" class="col-md-2 control-label"></label>
        <div class=" col-md-8">
            <div class="portlet light bordered">

                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-social-dribbble font-red"></i>
                        <span class="caption-subject font-red bold uppercase">CustomCss</span>
                        <span class="caption-helper">css syntax</span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                            <i class="icon-cloud-upload"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                            <i class="icon-wrench"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                            <i class="icon-trash"></i>
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <textarea asp-for="CustomCSS"  style="width:100%;height:150px" id="code_editor_demo_2" maxlength="500"></textarea>
                </div>
                </div>
            </div>
         </div>

            <div class="form-group">
                <label asp-for="CreateDate" class="col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="CreateDate" class="form-control" readonly />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="UpdateDate" class="form-control" readonly />
                    <span asp-validation-for="UpdateDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>
        </div>

</form>


<!-- END CORE PLUGINS -->
<!-- BEGIN PAGE LEVEL PLUGINS -->





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="/metronic/global/plugins/js.cookie.min.js" type="text/javascript"></script>
<script src="/metronic/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
<script src="/metronic/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
<script src="/metronic/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>

<script src="/metronic/global/plugins/codemirror/lib/codemirror.js" type="text/javascript"></script>
<script src="/metronic/global/plugins/codemirror/mode/javascript/javascript.js" type="text/javascript"></script>
<script src="/metronic/global/plugins/codemirror/mode/htmlmixed/htmlmixed.js" type="text/javascript"></script>
<script src="/metronic/global/plugins/codemirror/mode/css/css.js" type="text/javascript"></script>
    <script>
        var handleDemo2 = function () {
            var myTextArea = document.getElementById('code_editor_demo_2');
            var myCodeMirror = CodeMirror.fromTextArea(myTextArea, {
                lineNumbers: true,
                matchBrackets: true,
                styleActiveLine: true,
                theme: "material",
                mode: 'css'
            });};
            jQuery(document).ready(function () {
                handleDemo2();
            });
    </script>
}

