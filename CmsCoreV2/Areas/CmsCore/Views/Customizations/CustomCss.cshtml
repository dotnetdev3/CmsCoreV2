@model CmsCoreV2.Models.ViewModels.CustomCssViewModel

@{
    ViewData["Title"] = "CustomCss";
}
<h2>CustomCss</h2>
<script src="//cdn.ckeditor.com/4.6.2/full/ckeditor.js"></script>
<form asp-action="CustomCss">
    <div class="form-horizontal">
        <h4>Customization</h4>
        <hr />
        <p>@ViewData["var"]</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ThemeName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="ThemeName" class="form-control" readonly />
                <span asp-validation-for="ThemeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CustomCSS" class="col-md-2 control-label"></label>

            <div class="col-md-8">
               
               <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="icon-social-dribbble font-red"></i>
                                        <span class="caption-subject font-red bold uppercase">CustomCSS</span>
                                        <span class="caption-helper">css syntax</span>
                                    </div>
                                </div>

                                <div class="portlet-body">
                                    <textarea style="width:100%;height:100px;" asp-for="CustomCSS" ></textarea>
                                    <span asp-validation-for="CustomCSS" class="text-danger"></span>
                                </div>
                                
                            </div>
            </div>
        </div>      
        <div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="CreateDate" class="form-control" readonly />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="UpdateDate" class="form-control" readonly />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

