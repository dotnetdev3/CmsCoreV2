@model CmsCoreV2.Models.Customization

@{
    ViewData["Title"] = "CustomCss";
}
<h2>CustomCss</h2>
<script src="//cdn.ckeditor.com/4.6.2/full/ckeditor.js"></script>
<form asp-action="CustomCss">
    <div class="form-horizontal">
        <h4>Customization</h4>
        <hr />
        <p>@ViewData["var"]</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ThemeName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ThemeName" class="form-control" readonly />
                <span asp-validation-for="ThemeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CustomCSS" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <textarea asp-for="CustomCSS" tabindex="3" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="CustomCSS"></span>
                <script type="text/javascript">
                    CKEDITOR.replace('CustomCSS');
                    CKEDITOR.add
                    CKEDITOR.config.contentsCss = '/educate/css/Custom.css';
                </script>

                <div id="content2" style="display: none" data-sample="2">
                    <p>The number of <code>change</code> events:<strong><span id="changes"></span></strong>.</p>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        <input type="hidden" asp-for="MetaKeywords" />
        <input type="hidden" asp-for="PageTemplates" />
        <input type="hidden" asp-for="ComponentTemplates" />
        <input type="hidden" asp-for="Logo" />
        <input type="hidden" asp-for="MetaTitle" />
        <input type="hidden" asp-for="MetaDescription" />
        <input type="hidden" asp-for="ManyLocation" />
        <div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreateDate" class="form-control" readonly />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedBy" class="form-control" readonly />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdateDate" class="form-control" readonly />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UpdatedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UpdatedBy" class="form-control" readonly />
                <span asp-validation-for="UpdatedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

