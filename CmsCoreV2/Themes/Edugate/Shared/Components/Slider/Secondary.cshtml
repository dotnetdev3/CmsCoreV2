@model CmsCoreV2.Models.Slider
@if (Model != null && Model.Id > 0)
{
    <div id="homeSlider2" style="clear:both;">
        <div class="section slider-banner set-height-top" style="background:url('/images/background-gradient-gray.png') no-repeat whitesmoke">
            @{ int index = 0;}
            @foreach (var slide in Model.Slides.Where(w => w.IsPublished == true).ToList())
            {
                index++;
                <div class="slider-item">

                    <div class="slider-@index">
                        <div class="section why-choose-us">
                            <div class="why-choose-us-wrapper-top">
                                <div class="container">
                                    <div class="why-choose-us-wrapper">
                                        <h2 class="title-2">@slide.Title</h2>

                                        <p>@Html.Raw(slide.Description)</p>
                                        <button onclick="window.location.href='@slide.CallToActionUrl'" class="btn btn-green-2"><span>@slide.CallToActionText</span></button>
                                    </div>
                                    <div data-wow-delay="0.2s" data-wow-duration="1.2s" class="background-girl-1 wow fadeInUp"><img src="@(slide.Photo)" alt="" class="img-responsive" /></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <br style="clear:both" />
    </div>
                }