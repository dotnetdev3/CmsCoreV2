@model PageViewModel
@{
    ViewData["Title"] = Model.SeoTitle;
}
<div id="wrapper-content">
    <!-- PAGE WRAPPER-->
    <div id="page-wrapper">
        <!-- MAIN CONTENT-->
        <div class="main-content">
            <!-- CONTENT-->
            <div class="content">
                <div class="section section-padding contact-main">
                    <div class="container">
                        <div class="contact-main-wrapper">
                            <h1 class="event-detail-title">@Model.Title</h1>
                            @Html.Raw(Model.Body)
                            <div class="row contact-method">
                                @await Component.InvokeAsync("EmbedForm", new { name = "Survey", template = "SurveyForm" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- BUTTON BACK TO TOP-->
        <div id="back-top"><a href="#top"><i class="fa fa-angle-double-up"></i></a></div>
    </div>
</div>
